@page
@model Libly.Pages.Books.IndexModel

<h1>Book List</h1>

<table border="1">
    <thead>
        <tr>            
            <th>Title</th>
            <th>Category</th>
            <th>Date of Publication</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>                
                <td>@book.Title</td>
                <td>@book.Category</td>
                <td> @Html.DisplayFor(modelItem => book.Dop)</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@book.Id">Edit</a>
                    <a asp-page="Delete" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>    
    <a asp-page="Create">Add New</a>
</div>
